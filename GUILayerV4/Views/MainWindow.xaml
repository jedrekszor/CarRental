<Window x:Class="GUILayerV4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUILayerV4"
        xmlns:vmodel="clr-namespace:GUILayerV4.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <vmodel:MainWindowViewModel x:Key="MainWindowViewModel"/>
    </Window.Resources>

    <Grid>
        <ContentControl Content="{Binding CurrentPageViewModel, Source={StaticResource MainWindowViewModel}}" />
    </Grid>

</Window>
