<Window x:Class="GUILayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUILayer.Views"
        xmlns:vm="clr-namespace:GUILayer.ViewModels.SubVMs"
        xmlns:vmb="clr-namespace:GUILayer.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LoginPageViewModel}">
            <local:LoginPageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HomePageViewModel}">
            <local:HomePageView />
        </DataTemplate>

        <vmb:MainWindowViewModel x:Key="MainWindowViewModel"/>

    </Window.Resources>

    <DockPanel DataContext="{Binding Source={StaticResource MainWindowViewModel}}">
        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </DockPanel>


</Window>
